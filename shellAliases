# shell related
LS_OPTIONS='-alFH'
alias cp='cp -iv'
alias l='ls $LS_OPTIONS'
alias lt='ls -halt'
alias ..='cd ..'
alias t='tree'
alias vi='echo use v'
alias v='vim'

# git related
alias g='git'
alias gc='git commit'
alias gf='git fetch'
alias ga='git add -p'
alias gall='git add .'
alias gs='git status'
alias gl='git log --graph'
alias glo='git log --oneline'
alias gb='git branch'
alias gba='git branch --all'
alias gd='git diff'

# Commit helper shortcuts
alias vin='vim ~/next_commit'

# Rust
export EDITOR=vim
export RUST_BACKTRACE=1

# FZF
export FZF_DEFAULT_COMMAND='find .' # Make sure to include dotfiles 

# Ruby/RVM
export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting

# Zettelkasten
alias zk="~/Rust_Projects/Zettelkastenanalysis/target/debug/zettel_analysis"
